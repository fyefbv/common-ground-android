<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Auth Flow -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.common_ground_android.ui.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_profileSelectorFragment"
            app:destination="@id/profileSelectorFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.common_ground_android.ui.fragments.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_profileSelectorFragment"
            app:destination="@id/profileSelectorFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileSelectorFragment"
        android:name="com.example.common_ground_android.ui.fragments.ProfileSelectorFragment"
        android:label="ProfileSelectorFragment"
        tools:layout="@layout/fragment_profile_selector">
        <action
            android:id="@+id/action_profileSelectorFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileSelectorFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <!-- Main Flow -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.common_ground_android.ui.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_chatRouletteFragment"
            app:destination="@id/chatRouletteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_groupRoomFragment"
            app:destination="@id/groupRoomFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileSelectorFragment"
            app:destination="@id/profileSelectorFragment" />
    </fragment>

    <fragment
        android:id="@+id/roomsFragment"
        android:name="com.example.common_ground_android.ui.fragments.RoomsFragment"
        android:label="RoomsFragment"
        tools:layout="@layout/fragment_rooms">
        <action
            android:id="@+id/action_roomsFragment_to_groupRoomFragment"
            app:destination="@id/groupRoomFragment" />
        <argument
            android:name="roomId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.common_ground_android.ui.fragments.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_profileSelectorFragment"
            app:destination="@id/profileSelectorFragment" />
    </fragment>

    <!-- Chat Flow -->
    <fragment
        android:id="@+id/chatRouletteFragment"
        android:name="com.example.common_ground_android.ui.fragments.ChatRouletteFragment"
        android:label="ChatRouletteFragment"
        tools:layout="@layout/fragment_chat_roulette" />

    <fragment
        android:id="@+id/groupRoomFragment"
        android:name="com.example.common_ground_android.ui.fragments.GroupRoomFragment"
        android:label="GroupRoomFragment"
        tools:layout="@layout/fragment_group_room">
        <argument
            android:name="roomId"
            app:argType="string" />
    </fragment>

</navigation>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/md_surface"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_surface_container"
        android:elevation="@dimen/elevation_2">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:titleTextColor="@color/md_on_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_16"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hello"
                        android:textColor="@color/md_on_surface_variant"
                        android:textSize="@dimen/text_sm" />

                    <TextView
                        android:id="@+id/user_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textColor="@color/md_on_surface"
                        android:textSize="@dimen/text_xl"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/switch_profile_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Button.Outlined"
                        android:text="@string/switch_it"
                        android:textSize="@dimen/text_sm" />

                    <ImageButton
                        android:id="@+id/profile_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_background_secondary"
                        android:src="@drawable/ic_person"
                        android:layout_marginStart="@dimen/spacing_8"
                        android:contentDescription="@string/profile"
                        app:tint="@color/md_on_secondary_container"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="@dimen/spacing_16"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Chat Roulette Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chat_roulette_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardView.Rounded"
                app:cardCornerRadius="@dimen/corner_radius_28"
                app:cardElevation="@dimen/elevation_3"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="@dimen/spacing_24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_24"
                    android:background="@drawable/chat_roulette_gradient">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/spacing_12">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_chat"
                                android:background="@drawable/circle_background_white_alpha"
                                android:padding="@dimen/spacing_8"
                                android:layout_marginEnd="@dimen/spacing_8"
                                app:tint="@color/md_on_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chat_roulette"
                                android:textColor="@color/md_on_primary"
                                android:textSize="@dimen/text_xl"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/chat_roulette_description"
                            android:textColor="@color/md_on_primary"
                            android:textSize="@dimen/text_sm"
                            android:alpha="0.9" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_person"
                        android:alpha="0.2"
                        app:tint="@color/md_on_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_16">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/active_rooms"
                    android:textColor="@color/md_on_surface"
                    android:textSize="@dimen/text_xl"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/rooms_count_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 комнат"
                    app:chipBackgroundColor="@color/md_secondary_container"
                    android:textColor="@color/md_on_secondary_container"
                    app:chipCornerRadius="@dimen/corner_radius_full" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rooms_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_room" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
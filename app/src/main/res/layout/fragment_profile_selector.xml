<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/md_surface"
    android:padding="@dimen/spacing_16"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_32">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_profile"
                android:textColor="@color/md_on_surface"
                android:textSize="@dimen/text_2xl"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_profile_description"
                android:textColor="@color/md_on_surface_variant"
                android:textSize="@dimen/text_sm"
                android:gravity="center" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profiles_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_16"
            tools:listitem="@layout/item_profile"
            tools:itemCount="3"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/create_profile_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardView.Rounded"
            app:cardCornerRadius="@dimen/corner_radius_20"
            app:cardElevation="@dimen/elevation_1"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_16"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/add_profile_background"
                    android:padding="@dimen/spacing_16" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_16">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_new_profile"
                        android:textColor="@color/md_on_surface"
                        android:textSize="@dimen/text_lg"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_profile_hint"
                        android:textColor="@color/md_on_surface_variant"
                        android:textSize="@dimen/text_sm"
                        android:layout_marginTop="@dimen/spacing_4" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
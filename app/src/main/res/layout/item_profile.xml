<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardView.Rounded"
    app:cardCornerRadius="@dimen/corner_radius_20"
    app:cardElevation="@dimen/elevation_2"
    android:layout_marginBottom="@dimen/spacing_12"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_16"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_profile"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/md_outline_variant" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_16">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_on_surface"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_8"
                tools:text="Profile Name"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/interests_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:chipSpacingHorizontal="@dimen/spacing_4">

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

<!--        <ImageView-->
<!--            android:id="@+id/selection_indicator"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:src="@drawable/ic_check"-->
<!--            android:visibility="invisible"-->
<!--            app:tint="@color/md_primary" />-->

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>